<% content_for :javascript_includes do %>
  <%= javascript_include_tag "index.js" %>
<% end %>

<div class="row">
  <div class="col-sm-8">
    <div class="logo-wrap">
      <%= image_tag('bio-io.png', class:'img-responsive') %>
    </div>
  </div>
  <div class="col-sm-4">
    <p class="text-uppercase text-justify col-md-pull-right col-sm-pull-left">
      Design by Julian Goldman <br>
      Built by Roger Miller
    </p>
  </div>
</div>

<div class="row-fluid">
  <div class="col col-sm-4">
    <div class="temp-container">
      <canvas id="temp-canvas" width=300 height=200></canvas>
    </div>
  </div>

<div class="col col-sm-4">
  <h5 class="text-uppercase sub-header">real-time feedback:</h4>
    <table class="table table-borderless">
      <tr>
        <td class='bio-icon'>
          <%= image_tag('heart.png', class: 'img-responsive') %>
        </td>
        <td class="heart-rate-container data-cell">
          0
        </td>
        <td>
          <div class="circle heart-circle"></div>
        </td>
      </tr>
      <tr>
        <td class='bio-icon'>
          <%= image_tag('sweat.png', class: 'img-responsive') %>
        </td>
        <td class="skin-response-container data-cell">
          0
        </td>
        <td>
          <div class="circle gsr-circle"></div>
        </td>
      </tr>

      <tr>
        <td class='bio-icon'>
          <%= image_tag('temperature.png', class: 'img-responsive temperature-image') %>
        </td>
        <td id="temp-readout">
          0
        </td>
        <td>
          <div class="circle temp-circle"><div>
        </td>
      </tr>
    </table>
  </div>

  <div class="col col-sm-4">
    <h5 class="text-uppercase sub-header">JULIAN GOLDMAN STATISTICALLY:</h5>
    <div class="julian-stats">
      <p class="text-left grey-text">
        Caucasian Male - Ashkenazi Jewish 31 years old
      </p>
      <h5 class="text-uppercase sub-header">Genetic predispositions:</h4>
      <div class="julian-stats">
        <table class="table table-borderless table-padless">
          <tr>
            <td> High blood pressure </td>
            <td class="text-right"> $ </td>
          </tr>
          <tr>
            <td> High cholesterol </td>
            <td class="text-right">$ </td>
          </tr>
          <tr>
            <td> Melanoma </td>
            <td class="text-right"> $ </td>
          </tr>
          <tr>
            <td> Colorectal Polyps </td>
            <td class="text-right"> $$ </td>
          </tr>
          <tr>
            <td> Late-onset Alzheimers </td>
            <td class="text-right"> $$ </td>
          </tr>
          <tr>
            <td> Psychiatric Depression </td>
            <td class="text-right"> $$$ </td>
          </tr>
        </table>
      </div>
      </div>
    </div>
</div>
<div class="row-fluid">
  <div class="col-sm-4 col-sm-offset-8">
    <div class="stat-footer">
      <p>
        <span class="text-uppercase center-justified">YOU HAVE BEEN COLLECTING FOR:</span> <span class="grey-text">8 months</span>
      </p>
      <p>
        <span class="text-uppercase center-justified">YOU HAVE MADE:</span> <span class="grey-text">$1200</span>
      </p>
      <p>
        <span class="text-uppercase center-justified">YOU HAVE DONATED:</span> <span class="grey-text"> 104 hours of data</span>
      </p>
    </div>
  </div>
</div>
